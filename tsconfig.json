{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext", "dom"],
    "module": "es2020",
    "outDir": "dist",
    "downlevelIteration": true,
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
